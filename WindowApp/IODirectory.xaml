<Window x:Class="WindowApp.IODirectory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowApp"
        mc:Ignorable="d"
        Title="IODirectory" Height="200" Width="350"
        Name="directoryWindow">
    <Grid Margin="10" FocusManager.FocusedElement="{Binding ElementName=directoryPath}">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0">Enter directory path:</TextBlock>
        <TextBlock Grid.Row="1" Text="{Binding ElementName=directoryWindow, Path=CurrentDir}"/>
        <TextBox Grid.Row="2" x:Name="directoryPath" MinWidth="250" />
        
        <WrapPanel Grid.Row="3" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,15,0">OK</Button>
        </WrapPanel>
    </Grid>
</Window>
