<Window x:Class="WindowDevelop.DirectoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WindowDevelop"
        mc:Ignorable="d"
        Title="DirectoryWindow" Height="250" Width="400">
    
    <Grid Margin="10" FocusManager.FocusedElement="{Binding ElementName=DirectoryPath}">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0">Enter directory path:</TextBlock>
        <TextBox Grid.Row="1" x:Name="DirectoryPath" x:FieldModifier="private" MinWidth="250" />
        
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Click="Accept" IsDefault="True" MinWidth="60" Margin="0,0,15,0" Content="OK"/>
        </WrapPanel>
    </Grid>
    
</Window>
