<Window x:Class="WindowApp.AlgorithmsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowApp"
        mc:Ignorable="d"
        Title="Algorithms" Height="150" Width="300">
    <Grid>
        <GroupBox Header="Выбери алгоритмы для упрощения 3D модели" Padding="5" Name="groupBox">
            <StackPanel>
                <CheckBox x:Name="checkBox1" IsThreeState="True" Height="20" Content="Bound box" />
                <CheckBox x:Name="checkBox2" IsThreeState="True" Height="20" Content="Vertex Collapsing Radius"/>
                <CheckBox x:Name="checkBox3" IsThreeState="True" Height="20" Content="Edge Contration Angel"/>
                <Button Width="80" Margin="3" Click="clickButton">Start</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
